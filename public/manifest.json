{
  "manifest_version": 3,
  "name": "BlinX Extension",
  "version": "1.0",
  "description": "System-wide blink rate monitoring and notifications",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_icon": "favicon.ico"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "css": ["content-style.css"]
    }
  ]
}